<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1">
        <title>PublicChat</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="/styles/chat.css">
        <!--add icon library-->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
        <script src="/socket.io/socket.io.js"></script>
    </head>
    <body>
        <div class="d-flex" id="wrapper">

            <!-- page-content-wrapper -->
            <div id="page-content-wrapper">
                <!-- navbar -->
                <div id="nav-template"></div>
                <!-- navbar -->
                <div id="fieldset-container">
                    <fieldset>
                        <!-- public chat Page Content -->
                        <div class="container bootstrap snippets bootdeys chat-container">
                            <!-- <div class="col-md-7 col-xs-12 col-md-offset-2"> -->
                            <!-- Panel Chat -->
                            <div class="panel">
                                <div class="panel-body">
                                    <div class="chat-window">
                                    </div>
                                </div>
                                <div class="panel-footer">
                                    <form id="btn-send">
                                        <div class="input-group">
                                            <input type="text" class="form-control" id="msg-txt" placeholder="Say something">
                                            <span class="input-group-btn">
                                                <button class="btn btn-primary" type="submit" name="submit"><em class="fa fa-paper-plane" aria-hidden="true"></em></button>
                                            </span>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <!-- End Panel Chat -->
                            <!-- </div> -->
                        </div>
                        <!-- Public chat Page Content -->
                    </fieldset>
                </div>
                <div id="bottom-nav-template"></div>       
                <div id="search-box-view"></div>
            </div>
            <!-- /#page-content-wrapper -->

            <!-- Search pop up dialogue -->
            <div class="modal fade" id="search-box" tabindex="-1" role="dialog">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header text-center">
                            <h4 class="modal-title w-100 font-weight-bold">Search</h4>
                        </div>
                        <div class="modal-body mx-3">
                            <div class="md-form mb-3">
                                <input type="text" id="keyword" class="form-control validate">
                            </div>
                        </div>
                        <div class="modal-footer d-flex justify-content-center">
                            <button type="button" class="btn btn-primary">Search</button>
                            <button type="button" class="btn btn-primary" data-dismiss="modal" aria-label="Close">Back</button>
                        </div>
                    </div>
                </div>
            </div>
             <!-- End of search pop up dialogue -->
            
             <!-- <div id="bottom-nav-template"></div> -->

        </div>
        <!-- /#wrapper -->

        <!-- Bootstrap core JavaScript -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
        <!-- import chat room js file -->
        <script type="module" src="/js/chatRoom.js"></script>
        <script src="/js/nav.js"></script>
        <script src="js/bottomNav.js"></script>
        <script type="module" src="/js/sockets/publicChatSocket.js"></script>
    </body>

</html>